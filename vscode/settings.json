{
    "editor.tabSize": 4,
    "editor.fontFamily": "'Fira Code',Menlo, Monaco, 'Courier New', monospace",
    "editor.inlineSuggest.enabled": true,
    "java.import.gradle.java.home": "/opt/homebrew/Cellar/openjdk@17/17.0.6/libexec/openjdk.jdk/Contents/Home",
    "workbench.iconTheme": "material-icon-theme",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.fontSize": 14,
    "explorer.compactFolders": false,
    "editor.fontLigatures": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "redhat.telemetry.enabled": true,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "yaml": true
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.formatOnSave": true,
    // use single quotes
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "material-icon-theme.folders.associations": {
        "use-cases": "serverless",
        "infra": "less",
        "domain": "delta",
        "pipeline-scripts": "pipe",
        "cdk": "aws",
        "application": "app",
        "main": "views",
        "dynamodb": "aws",
        "repository": "database",
        "unit": "container",
        "controller": "container",
        "http": "container"
    },
    "material-icon-theme.files.associations": {
        "database.ts": "database"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "typescript.inlayHints.parameterNames.enabled": "all",
    "[ignore]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    // eslinst fix on save
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "prettier.useTabs": false,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.printWidth": 200,
    "prettier.singleAttributePerLine": true,
    "prettier.trailingComma": "none",
    "editor.lineNumbers": "relative",
    "workbench.editor.labelFormat": "short",
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },

    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // open explorer with <leader>ee
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "e", "e"],
            "commands": ["workbench.files.action.focusFilesExplorer"]
        }
    ],
    "vim.handleKeys": {
        "<C-n>": false
    },
    // movements between panels
    "vim.normalModeKeyBindings": [
        {
            "before": ["<C-h>"],
            "commands": ["workbench.action.navigateLeft"]
        },
        {
            "before": ["<C-j>"],
            "commands": ["workbench.action.navigateDown"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["workbench.action.navigateUp"]
        },
        {
            "before": ["<C-l>"],
            "commands": ["workbench.action.navigateRight"]
        },
        // split panels
        {
            "before": ["<leader>", "v"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "s"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        // change tabs
        {
            "before": ["<leader>", "t", "h"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<leader>", "t", "l"],
            "commands": ["workbench.action.nextEditor"]
        },
        // opent terminal with tt
        {
            "before": ["<leader>", "t", "t"],
            "commands": ["workbench.action.terminal.toggleTerminal"]
        },
        // show code definitions with `gi`
        {
            "before": ["g", "i"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["<leader>", "j"],
            "commands": ["extension.jumpy-word"]
        }
    ],
    "vim.foldfix": true,
    "nerdtree.hideSidebarWhenOpenFile": false,
    "nerdtree.alwaysShowSidebar": true,
    "workbench.colorTheme": "IntelliJ-ish Darcula",
    "[dotenv]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "window.zoomLevel": 1,
    "terminal.integrated.env.osx": {}
}
